# SportIntel MCP Configuration

# API Keys
ODDS_API_KEY=your_odds_api_key_here
APIFY_TOKEN=your_apify_token_here

# Data Sources
BALLDONTLIE_API_URL=https://api.balldontlie.io/v1
ODDS_API_URL=https://api.the-odds-api.com/v4

# Model Configuration
MODEL_PATH=./models/xgboost_nba_projections.json
ENABLE_SHAP=true
CONFIDENCE_THRESHOLD=0.7

# MCP Server Settings
MCP_SERVER_NAME=sportintel-mcp
MCP_VERSION=1.0.0
MAX_CONCURRENT_REQUESTS=10

# Rate Limiting
ODDS_API_RATE_LIMIT=500
BALLDONTLIE_RATE_LIMIT=60

# Caching
ENABLE_CACHE=true
CACHE_TTL_SECONDS=300

# Apify Actor Settings
APIFY_PROXY_GROUPS=RESIDENTIAL
APIFY_MAX_REQUEST_RETRIES=3

# Features (Phase 1 vs Phase 2)
ENABLE_INJURY_ANALYSIS=false
ENABLE_PROP_OPTIMIZER=false
ENABLE_WEBHOOKS=false

# Logging
LOG_LEVEL=info
ENABLE_DEBUG_MODE=false
